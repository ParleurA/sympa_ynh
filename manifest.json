{
    "name": "Sympa",
    "id": "sympa",
    "packaging_format": 1,
    "description": {
        "en": "Mailing List manager",
        "fr": "Gestionnaire de liste de diffusion"
    },
    "url": "https://www.sympa.org/",
    "version": "6.2.16-1",
    "license": "free",
    "maintainer": {
        "name": "alexAubin",
        "email": "alex.aubin@mailoo.org",
        "url": "https://github.com/alexAubin/"
    },
    "requirements": {
        "yunohost": ">> 2.4.0"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "mysql",
        "postfix"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Sympa",
                    "fr": "Choisissez un nom de domaine pour Sympa"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Sympa",
                    "fr": "Choisissez un chemin pour Sympa"
                },
                "example": "/sympa",
                "default": "/sympa"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez lâ€™administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "language",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["en", "fr", "fi", "bg", "eo", "af", "ca", "pl", "ja", "el", "tr", "ml", "oc", "gl", "et", "sv", "br", "ru", "eu", "de", "zh_TW", "vi", "id", "zh_CN", "ro", "cs", "it", "nl", "pt_BR", "ko", "hu",     "es", "ar", "pt"],
                "default": "en"
            }
        ]
    }
}
